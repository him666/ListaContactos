<p id="notice"><%= notice %></p>

<h1>Contactos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Direccion</th>
      <th>Telefono</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contactos.each do |contacto| %>
      <tr>
        <td><%= contacto.nombre %></td>
        <td><%= contacto.apellido %></td>
        <td><%= contacto.direccion %></td>
        <td><%= contacto.telefono %></td>
        <div class="col-sm-6 col-md-5">
          <div class="alert-link">
        <td><%= link_to 'Show', contacto %></td>
        <td><%= link_to 'Edit', edit_contacto_path(contacto) %></td>
        <td><%= link_to 'Destroy', contacto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </div>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col-sm-6 col-md-5">
  <div class="alert-link">
<%= link_to 'Nuevo Contacto', new_contacto_path %>
</div>
</div>